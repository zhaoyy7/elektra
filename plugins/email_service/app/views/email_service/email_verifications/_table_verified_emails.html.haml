.email_verification_table
%table.table
  %thead
    %tr
      %th Identity Name
      %th Identity Type
      %th Sending Enabled
      %th.snug
  %tbody
    - if !email_addresses || email_addresses.empty?
      %tr
        %td{ colspan: 3 } No verified eMail address available
    - else
      -@paginatable_emails.each do | email_item |
        = render partial: 'table_verified_email_item', locals: { email_item: email_item }
-if @paginatable_emails
  = paginate @paginatable_emails, :theme => 'twitter-bootstrap-3', :remote => false
